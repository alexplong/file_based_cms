<ul>
  <% @files.each do |file| %>
    <li>
      <a href="/<%= file %>"><%= file %></a> 
      <a href="/<%= file %>/edit">edit</a>
      <form action="/<%= file %>/destroy" method="post" class="inline">
        <button type="submit">Delete</button>
      </form>
    </li>
  <% end %>
</ul>
<a href="/new">New Document</a>

<% if session[:username] %>
  <form action="/users/logout" method="post">
    <p class="user-status">
      Signed in as <%= session[:username] %>.
      <button type="submit">Sign Out</button>
    </p>
  </form>
<% else %>
  <p class="user-status"><a href="/users/login">Sign In</a></p>
<% end %>
